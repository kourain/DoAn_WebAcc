@{
    ViewData["Title"] = "Acc GI";
    string accinf = $"https://act.hoyolab.com/app/community-game-records-sea/index.html?bbs_presentation_style=fullscreen&bbs_auth_required=true&gid=2&user_id={Model.HoyolabID}&utm_source=hoyolab&utm_medium=gamecard&bbs_theme=dark&bbs_theme_device=1#/ys";
}
@model DoAn_WebAcc.Models.AccGI
@using DoAn_WebAcc.Utilities;
<center><img src="https://uploadstatic-sea.mihoyo.com/contentweb/20200319/2020031919242255224.png" class="city__icon"></center>
<h1 class="guide__title" style="margin-bottom: 72px;">
    Chi tiết acc Genshin Impact
</h1>
<div class="guide__title">
    <div class="col-lg-12" style="
    background-color: rgb(27 25 60 / 58%);
    border-radius: 30px;">
        <center><img src="https://uploadstatic-sea.mihoyo.com/contentweb/20200319/2020031919242255224.png" class="city__icon"></center>
        <div id="demo">
            <!-- The slideshow -->
            <div class="info-detail-product">
                <div class="row g-0 info-line">
                    <section class="col text-center text-uppercase mr-5">
                        <h4>
                            Cấp nhà lữ hành
                        </h4> @Model.LV
                    </section>
                    <section class="col text-center text-uppercase text-nowrap">
                        <h4>
                            Khu Vực
                        </h4> @Model.Server
                    </section>
                </div>
                <div class="hr-product"></div>
                <div class="row g-0 info-line">
                    <section class="row g-0 text-center">
                        <span class="more-detail">Acc Chưa gắn Mail và chưa cài Sinh Nhật</span>
                    </section>
                </div>
                <div class="hr-product"></div>
                <div class="row g-0 info-line">
                    <section class="row g-0 text-center">
                        <h4 class="col-12 pb-2">
                            Số Nhân Vật: @Model.CharCount
                        </h4>
                    </section>
                </div>
                <div class="row g-0 info-line">
                    <section class="row g-0 text-center">
                        <h4 class="col-12 pb-2">
                            Số Vũ khí 5*: @Model.Weapon
                        </h4>
                    </section>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button class="btn-pretty float-right">@Model.Price<sup>đ</sup></button>
                </div>
                <div class="col-6">
                    <a href="@accinf" class="col-6">
                        <button class="btn-pretty">Xem Hoyolab</button>
                    </a>
                </div>
            </div>
        </div>
        <center>
            @if (Model.Sold == null || Model.Sold == 0)
            {
                <div class="col-6">
                    <form method="post" asp-action="Buy">
                        <input type="number" asp-for="UID" value="@Model.UID" hidden>
                        <button type="submit" class="btn-pretty">
                            Mua ngay
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="col-6">
                    <button class="btn-pretty">
                        Đã bán
                    </button>
                </div>
            }
        </center>
    </div>
</div>
<iframe src="https://enka.network/u/@Model.UID" style="width:100%;height:900px"></iframe>