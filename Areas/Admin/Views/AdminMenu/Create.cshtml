@model DoAn_WebAcc.Areas.Admin.Models.AdminMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm menu</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới menu</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ItemName">ItemName</label>
                    <input type="text" class="form-control mb-3" asp-for="ItemName" placeholder="Nhập tên menu" required> <span asp-validation-for="ItemName" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div> <label asp-for="ParentLevel">Chọn menu cha</label>
                    <select asp-for="ParentLevel"
                            class="form-control"
                            asp-items="@(new SelectList (ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ControllerName">ControllerName</label>
                    <input type="text" class="form-control mb-3" asp-for="ControllerName" placeholder="Tên Controller"> <span asp-validation-for="ControllerName" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ActionName">ActionName</label>
                    <input type="text" class="form-control mb-3" asp-for="ActionName" placeholder="Tên Action"> <span asp-validation-for="ActionName" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ItemOrder">Thứ tự menu</label>
                    <input type="text" class="form-control mb-3" asp-for="ItemOrder" placeholder="Enter MenuOrder" required> <span asp-validation-for="ItemOrder" class=" alert-danger"></span>
                </div>
                <div class="form-group mt-5 mb-5">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>

    </div>
</main>
