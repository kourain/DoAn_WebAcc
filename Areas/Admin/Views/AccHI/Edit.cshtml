@model DoAn_WebAcc.Models.AccHI
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

|<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa AccHI</h2>
    </div>

    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>sửa AccHI</h2>
        </div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>

            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="UID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="UID">AccHIName</label>
                    <input type="number" class="form-control mb-3" asp-for="UID" placeholder="Nhập UID AccHI" required>
                    <span asp-validation-for="UID" class=" alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="LV">LV</label>
                    <input type="number" class="form-control mb-3" asp-for="LV" placeholder="Nhập LV AccHI" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CharCount">Số nhân vật</label>
                    <input type="number" class="form-control mb-3" asp-for="CharCount" placeholder="Nhập số nhân vật" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Weapon">Số vũ khí</label>
                    <input type="number" class="form-control mb-3" asp-for="Weapon" placeholder="Nhập số vũ khí" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Server">Server</label>
                    <select asp-for="Server" class="form-select" id="Server" required>
                        <option value="Sea">Sea</option>
                        <option value="Global">Global</option>
                        <option value="CN">CN</option>
                        <option value="JP">JP</option>
                        <option value="KR">KR</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Type">Phân loại</label>
                    <select asp-for="Type" class="form-select" id="Type">
                        <option value="VIP">VIP</option>
                        <option value="RR">Reroll</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Img">Hình ảnh</label>
                    <input type="text" class="form-control mb-3" asp-for="Img" placeholder="Nhập đường dẫn hình ảnh">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Price">Giá bán</label>
                    <input type="number" class="form-control mb-3" asp-for="Price" placeholder="Nhập giá bán" required>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="AccHI" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>

</main>