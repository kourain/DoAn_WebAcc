@model DoAn_WebAcc.Models.Footer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

|<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa Footer</h2>
    </div>

    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>sửa Footer</h2>
        </div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>

            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="FooterId" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="ItemText">ItemText</label>
                    <input type="text" class="form-control mb-3" asp-for="ItemText" placeholder="Nhập tên Footer" required>
                    <span asp-validation-for="ItemText" class=" alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Column">Column</label>
                    <input type="number" class="form-control mb-3" asp-for="Column" placeholder="Enter Column" required>
                    <span asp-validation-for="Column" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="ParentID">ParentID</label>
                    <select asp-for="ParentID"
                            class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))">
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ItemOrder">ItemOrder</label>
                    <input type="number" class="form-control mb-3" asp-for="ItemOrder" placeholder="Enter ItemOrder" required>
                    <span asp-validation-for="ItemOrder" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Icon">Icon</label>
                    <input type="text" class="form-control mb-3" asp-for="Icon" placeholder="Enter Icon">
                    <span asp-validation-for="Icon" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="TextLink">TextLink</label>
                    <input type="text" class="form-control mb-3" asp-for="TextLink" placeholder="Enter TextLink">
                    <span asp-validation-for="TextLink" class=" alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Link">Link</label>
                    <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Enter Link">
                    <span asp-validation-for="Link" class=" alert-danger"></span>
                </div>
                <div class="form-group mt-3 mb-5">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Luu</button>
            <a asp-controller="Footer" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>

</main>
