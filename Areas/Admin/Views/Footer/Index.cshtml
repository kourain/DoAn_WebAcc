@using DoAn_WebAcc.Models;
@model IList<Footer>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách Footer</h2>
    </div>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Footer" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1">
                Thêm Footer
            </i>
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4"></div>
                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th class="col-1 text-center">#</th>
                                <th class="col-3 text-center">Tiêu đề</th>
                                <td class="col-1 text-center">Cột</td>
                                <td class="col-1 text-center">Footer cha</td>
                                <td class="col-1 text-center">Thứ tự</td>
                                <td class="col-1 text-center">Ẩn/Hiện</td>
                                <td class="col-1 text-center">Icon</td>
                                <td class="col-1 text-center">TextLink</td>
                                <td class="col-1 text-center">Link</td>
                                <th class="col-2 text-center">Chức năng</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.FooterId</td>
                                    <td class="text-primary">@item.ItemText</td>
                                    <td class="text-center">@item.Column</td>
                                    <td class="text-center">@item.ParentID</td>
                                    <td class="text-center">@item.ItemOrder</td>
                                    <td class="text-center">@item.IsActive</td>
                                    <td class="text-center">@item.Icon</td>
                                    <td class="text-center">@item.TextLink</td>
                                    <td class="text-center">@item.Link</td>

                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Footer" asp-action="Edit" asp-route-id="@item.FooterId" class="btn btn-primary btn-sm" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-area="Admin" asp-controller="Footer" asp-action="Delete" asp-route-id="@item.FooterId" class="btn btn-danger btn-sm" title="Xoá">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

    </section>
</main>